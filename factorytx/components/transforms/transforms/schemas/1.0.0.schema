$schema: http://json-schema.org/schema
$schema-version: 1.0.0
$component-type: transform
properties:
  version:
    type: string
  name:
    type: string
    default: "Generic Transform"
  poll_rate:
    description: Poll time in seconds
    type: number
    minimum: 1
    default: 5
  actions:
    type: array
    items:
      type: object

required:
- version
- actions
