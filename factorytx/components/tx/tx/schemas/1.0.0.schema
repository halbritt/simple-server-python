$schema: http://json-schema.org/schema
$schema-version: 1.0.0
$component-type: tx
properties:
  version:
    type: string
  name:
    type: string
    default: "Generic Transform"
  poll_rate:
    description: Poll time in seconds
    type: number
    minimum: 1
    default: 1
  actions:
    type: array
    items:
      type: object
  tx_persistence_location:
    description: Where to store things
    type: string
    default: /var/status/factorytx/temp
required:
- version
- actions
